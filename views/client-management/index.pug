extends ../layouts/_layout

block variables
  - var activePage = 'client-management';

block content
  .app-title
    div
      h1
        i.fa.fa-users
        | Client Management

    ul.app-breadcrumb.breadcrumb.side
      li.breadcrumb-item
        a(href="/dashboard")
          i.fa.fa-home.fa-lg
      li.breadcrumb-item
        | Client Management


  .row
    .col-md-12
      .tile
        .tile-title
          a.btn.btn-primary(href="/client-management/new") New Client
        .tile-body
          .table-responsive
            table.table.table-hover.table-bordered#clientManagementTable
              thead
                tr
                  th Email
                  th Action

block specific-js
  // Data table plugin
  script(type='text/javascript', src="/js/plugins/jquery.dataTables.min.js")
  script(type='text/javascript', src="/js/plugins/dataTables.bootstrap.min.js")
  script(type='text/javascript', src="/js/lib/dataTables.buttons.js")
  script(type='text/javascript', src='/js/pages/client-management/index.js')